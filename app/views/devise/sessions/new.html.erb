<%= stylesheet_link_tag "start" %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
  <div class="actions">
        <%= f.label "Log in" %>
    <%= f.submit "Log in", class: "btn-login" %>
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field remember">
      <%= f.label :remember_me, class: "rem-label" %>
      <%= f.check_box :remember_me , class:"check"%>
    </div>
  <% end %>


<% end %>

<%= render "devise/shared/links" %>
